{
  "name": "@rhoas/openapi-validator",
  "version": "0.0.1",
  "description": "RHOAS OpenAPI Validator",
  "private": false,
  "bin": {
    "rhoas-openapi-validator": "dist/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "copy-ruleset": "cp ./ruleset.yaml ./dist/ruleset.yaml && cp ./package.json ./dist/package.json",
    "validate-dev": "ts-node ./src/index.ts validate",
    "validate": "node ./dist/index.js validate"
  },
  "dependencies": {
    "@stoplight/spectral": "^5.3.0",
    "chalk": "^4.1.1",
    "commander": "^8.0.0",
    "json-schema-resolve-allof": "^1.5.0",
    "ts-node": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.29.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "tsc": "^2.0.3",
    "typescript": "^4.3.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/craicoverflow/app-services-openapi-validator.git"
  },
  "keywords": [
    "openapi",
    "validator",
    "rhoas",
    "app-services"
  ],
  "author": "Red Hat Developer",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/craicoverflow/app-services-openapi-validator/issues"
  },
  "homepage": "https://github.com/craicoverflow/app-services-openapi-validator#readme"
}
